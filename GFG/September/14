class Solution {
    void rearrange(ArrayList<Integer> arr) {
        // code here
        int n = arr.size();
        ArrayList<Integer> result = new ArrayList<>(n);
        int postindex = 0, negatindex=0;
        
        while(postindex<n && arr.get(postindex)<0)postindex++;
        while(negatindex<n  && arr.get(negatindex)>=0)negatindex++;
        
        boolean ispositive = true;
        while(postindex < n || negatindex<n){
            
            if(ispositive && postindex<n){
                result.add(arr.get(postindex));
                postindex++;
                while(postindex<n && arr.get(postindex)<0)postindex++;
            }
            else if(!ispositive && negatindex<n){
                result.add(arr.get(negatindex));
                negatindex++;
                while(negatindex<n  && arr.get(negatindex)>=0)negatindex++;
                
            }
            
            ispositive= !ispositive ;
            
            
        }
        
        for(int i=0;i<n;i++){
            arr.set(i , result.get(i));
        }
    }
}
